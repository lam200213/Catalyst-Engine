# MongoDB Connection URI
MONGO_URI=mongodb://mongodb:27017/stock_analysis

# Redis cache server URL
CACHE_REDIS_URL=redis://localhost:6379/0

# Finnhub API Key (Replace with your actual key)
FINNHUB_API_KEY=YOUR_FINNHUB_API_KEY

# MarketAux API Key (Replace with your actual key)
MARKETAUX_API_KEY=YOUR_MARKETAUX_API_KEY

# Backend Service Ports & URLs
DATA_SERVICE_PORT=3001
SCREENING_SERVICE_PORT=3002
ANALYSIS_SERVICE_PORT=3003
SCHEDULER_SERVICE_PORT=3004 
LEADERSHIP_SERVICE_PORT=3005
MONITORING_SERVICE_PORT=3006
API_GATEWAY_PORT=3000
TICKER_SERVICE_PORT=5001

# Frontend Port
FRONTEND_PORT=5173

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:3000

# Logging Configuration
# Defines the verbosity of the service logs. Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Yahoo Finance Related Configuration
YF_POOL_SIZE=12
YF_CRUMB_TTL_SECONDS=600
YF_REQUEST_TIMEOUT=15
YF_REGION_DEFAULT=US
YF_SCREENER_PAGE_SIZE=250
YF_MAX_SECTORS=11
YF_MAX_INDUSTRIES_PER_SECTOR=10
YF_MAX_SECONDS=180

# Proxies Configuration (Optional)

# Yahoo Finance Proxies 
# Comma-separated list of proxy URLs, e.g., "http://user:pass@host1:port,http://user:pass@host2:port"
YAHOO_FINANCE_PROXIES=""
# Path to a newline-delimited proxies file which will be merged with env list, e.g., /app/runtime/proxies.txt
YAHOO_FINANCE_PROXIES_FILE=

# Webshare integration (choose one of the two inputs below)
# If you prefer the signed download token link (returns lines: ip:port:user:pass)
WEBSHARE_PROXY_DOWNLOAD_URL=

# Or use the Webshare API key (Authorization: Token <key>) to fetch JSON list (?mode=direct)
WEBSHARE_API_KEY=

# Refresh cadence for Webshare proxy pull (seconds, min 60)
YF_PROXY_REFRESH_SECONDS=900